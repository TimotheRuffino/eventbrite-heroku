<%= render 'layouts/card'%>

<h3>Voici tous les évènements créé par <%= @users.first_name %></h3>

<div class="row">
  <% @events_user.each do |event| %>
    <div class="col-sm-6" style="padding: 30px">
      <div class="card">
        <div class="card-header">
          <h4><%= event.title %></h4>
          
          <div class="card-body">
          <h5><%= event.description %></h5>
          
          <%= link_to "En savoir plus...", event_path(event.id), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
</div>
