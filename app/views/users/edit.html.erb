<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
  <h2 class="h3 mb-3 font-weight-normal text-center">Ã‰diter mon profil</h2>
  
    <%= form_for(current_user, url: user_path(current_user), method: :put) do |f| %>
    
    <div class="form-group">
      <%= f.label "Firstname" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    </div><br />
    <div class="form-group">
      <%= f.label "Lastname" %> <br />
      <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
    </div><br />
    <div class="form-group">
      <%= f.label "Description" %> <br />
      <%= f.text_area :description, autocomplete: "description", class: "form-control" %>
    </div><br />
    <div class="actions">
      <%= f.submit "Update", class:"btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
 

  <div class="mt-5">
    <%= link_to "Back", :back %>
  </div>
</div>