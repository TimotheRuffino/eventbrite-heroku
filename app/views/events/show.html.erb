



<br>
<div class="row justify-content-center">
 <h3>Page de l'évènement<h3>
 </div>
<br>


<div class="jumbotron bg_img text-dark">
  <div class="row justify-content-center">
<div class="card" style="width: 30rem;">

 <%= image_tag @events.avatar, alt: 'avatar' if @events.avatar.attached? %>


<%= form_tag event_avatars_path(@events.id), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>

 
  <div class="card-header">
   ID : <%= @events.id %>
  </div>
  <ul class="list-group list-group-flush">
  <li class="list-group-item">Créé par : <%= @events.admin.first_name %></li>
    <li class="list-group-item">Nom : <%= @events.title %></li>
    <li class="list-group-item">Localisation : <%= @events.location %> </li>
    <li class="list-group-item">Date: <%= @events.start_date %> </li>
    <li class="list-group-item">Description : <%= @events.description%> </li>
    <li class="list-group-item">Participants : <%= @events.attendances.count%> </li>
    <li class="list-group-item">Prix : <%= @events.price%> €</li>
  
    <%= link_to "Participer", new_attendance_path(id: @events.id) , class:"btn btn-outline-dark" %> 
    <% if current_user == @events.admin %>
     <%= link_to "Editer", edit_event_path(id: @events.id) , class:"btn btn-indo" %> 
    <% end %>
  </ul>
</div>
</div>
</div>


