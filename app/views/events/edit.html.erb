<div class="col-md-6 offset-md-3">

  <div class="row justify-content-center"> 
   <h3 class="texte-bienvenue mt-5">Modifie ton event</h3>
  </div>

 <div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
    <div class="row justify-content-center">

 
 <div class="container-fluid text-center">
  <div class="container-fluid">
    <%= form_for(:events,  url:(event_path), action: 'update', method: :patch) do |f| %>
  

      <div class="field">
        <%= f.label "Titre" %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: :title, class: "form-control" %>
      </div><br />

      <div class="field">
        <%= f.label "Description" %> <br />
        <%= f.text_area :description, autocomplete: :description, class: "form-control" %>
      </div><br />

      <div class="field">
        <%= f.label "Localisation" %> <br />
        <%= f.text_field :location, autocomplete: :location, class: "form-control" %>
      </div><br />

      <div class="field">
        <%= f.label "Date" %> <br />
        <%= f.datetime_field :start_date, autocomplete: :start_date, class: "form-control" %>
      </div><br />
      
      <div class="field">
        <%= f.label "Durée en minute"%> <br />
        <%= f.text_field :duration, placeholder: "Doit finir par 0 ou 5", class: "form-control" %>
      </div><br />

      <div class="field">
        <%= f.label "Prix" %> <br />
        <%= f.number_field :price, autocomplete: :price, class: "form-control" %>
      </div><br />

      <div class="actions">
        <%= f.submit "Modifier ton évènement", class: "btn btn-sm btn-primary" %>
      </div>
      
    <% end %>
  </div>
  </div>
  
</div> 
</div>
</div>
<div class="row justify-content-center"> 
    <%= link_to "Retour", :back %>
</div>
</div>
</div>