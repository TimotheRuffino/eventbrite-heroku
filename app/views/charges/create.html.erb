<h2>Merci pour le paiement !</h2>

<%= current_user.id %></br>
<%= @customer_id %></br>
<%= @event.id %>

  <%= form_tag attendances_path, method: "post" do %>

    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :event_id, @event.id %>
    <%= hidden_field_tag :customer_id, @customer_id %>

    <%= submit_tag "Confirmer le paiement", class: "btn btn-dark text-light" %>
    
  <% end %>